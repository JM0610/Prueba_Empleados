@*seccion datos generales*@
<div class="modal fade bd-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="md_emp_grl">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="card">
                <div class="card-header">
                    Datos generales
                </div>

                <div class="card-body">
                    <div class="row">

                        <div class="col-md-4 col-sm-12"><label>Codigo:</label></div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_codigo"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Nombre:</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_nombre"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Número de cedula</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_celula"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Correo</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_correo_grl"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Fecha de nacimiento</div>
                        <div class="col-md-8 col-sm-12"><label id="fecha_nacimiento"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Fecha ingreso</div>
                        <div class="col-md-8 col-sm-12"><label id="fecha_ingreso"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Jefe</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_jefe_grl"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Area:</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_area_grl"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Edad</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_edad_grl"></label></div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">Años en la empresa</div>
                        <div class="col-md-8 col-sm-12"><label id="lbl_tiempo_grl"></label></div>
                    </div>
                    <hr />
                    <label>Habilidades</label>
                    <div class="row" id="section_habilidades">
                        
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@*seccion para habilidades*@
<div class="modal fade" id="md_habilidades" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Habilidades del empleado
            </div>
            <div class="modal-body">
                <div class="row">
                    <label>Seleccione o digite una habilidad</label>
                    <div class="form-group col-12">
                        <label id="lbl_habilidad">Habilidades:</label>
                        <select class="form-control" id="slt_habilidad"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label id="lbl_habilidad_text">Digite habilidad:</label>
                    <div class="input-group">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                    <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                                </svg>
                            </div>
                        </div>
                        <input type="text" class="form-control" id="txt_habilidad"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn_cancelar_habilidades" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btn_guardar_habilidades">Guardar</button>
            </div>
        </div>
    </div>
</div>
